@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<h2 class="text-center">Danh sách người dùng</h2>

<div class="container mt-4">
    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-primary">Tạo tài khoản mới</a>
        <a href="/Identity/Account/Manage/ChangePassword" class="btn btn-primary">
            Đổi mật khẩu
        </a>


    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model.Any())
            {
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Vai trò</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Email</td>
                                <td>
                                    @{
                                        var userRoles = ViewData["UserRoles"] as Dictionary<string, IList<string>>;
                                        var roles = userRoles != null && userRoles.ContainsKey(user.Id) ? userRoles[user.Id] : new List<string>();
                                        @string.Join(", ", roles)
                                    }
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Chỉnh sửa</a>
                                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Xóa</a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">
                    Không có người dùng nào.
                </div>
            }
        </div>
    </div>
</div>