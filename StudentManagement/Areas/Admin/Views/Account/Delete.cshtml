@model Microsoft.AspNetCore.Identity.IdentityUser
@using Microsoft.Extensions.Localization
@inject Microsoft.Extensions.Localization.IStringLocalizer<StudentManagement.SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["DeleteUser"];
}

<div class="content py-4">
    <div class="container-fluid">
        <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
            <h2 class="mb-0 font-weight-bold text-primary d-flex align-items-center">
                <i class="fas fa-user-times me-2"></i>@Localizer["DeleteUser"]
            </h2>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card shadow-sm border-danger">
                    <div class="card-header bg-danger text-white">
                        <h4 class="mb-0 d-flex align-items-center">
                            <i class="fas fa-exclamation-triangle me-2"></i>@Localizer["Confirm"]
                        </h4>
                    </div>
                    <div class="card-body p-4">
                        <div class="alert alert-warning" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@Localizer["DeleteWarningMessage"]
                        </div>

                        <div class="d-flex align-items-center mb-4">
                            <div>
                                <h5 class="mb-1">@Model.Email</h5>
                                <p class="text-muted mb-0">@Model.UserName</p>
                            </div>
                        </div>

                        <form asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <div class="form-group text-center mt-4">
                                <button type="submit" class="btn btn-danger px-4">
                                    <i class="fas fa-trash-alt mr-2"></i>@Localizer["Confirm"]
                                </button>
                                <a asp-action="Index" class="btn btn-secondary px-4">
                                    <i class="fas fa-times mr-2"></i>@Localizer["Cancel"]
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>