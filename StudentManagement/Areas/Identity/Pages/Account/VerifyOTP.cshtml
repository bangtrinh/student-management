@page
@model VerifyOTPModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["VerifyOTPTitle"];
    Layout = "~/Views/Shared/_LoginRegisterLayout.cshtml"; 
}

<!DOCTYPE html>
<html lang="@System.Threading.Thread.CurrentThread.CurrentCulture.Name">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .otp-card {
            border-radius: 12px;
            border: none;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        }

        .otp-input {
            letter-spacing: 2px;
            font-size: 1.2rem;
            font-weight: 600;
        }

        .resend-link {
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="card otp-card p-4" style="width: 100%; max-width: 420px;">
            <div class="card-body">
                <div class="text-center mb-4">
                    <i class="bi bi-shield-lock text-primary" style="font-size: 3rem;"></i>
                    <h2 class="mt-3 fw-bold">@ViewData["Title"]</h2>
                    <p class="text-muted">@Localizer["OTPInstructions"]</p>
                </div>

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                    <div class="mb-4">
                        <label asp-for="OTP" class="form-label fw-semibold">@Localizer["OTPLabel"]</label>
                        <input asp-for="OTP" class="form-control otp-input text-center py-3"
                               aria-required="true" placeholder="@Localizer["OTPPlaceholder"]"
                               autocomplete="one-time-code" inputmode="numeric" />
                        <span asp-validation-for="OTP" class="text-danger small"></span>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary py-2 fw-semibold">
                            <i class="bi bi-check-circle me-2"></i>@Localizer["VerifyButton"]
                        </button>
                    </div>

                    <div class="text-center">
                        <p class="mb-2">
                            <a href="/Identity/Account/ForgotPassword" class="text-decoration-none">
                                <i class="bi bi-arrow-left"></i> @Localizer["BackLink"]
                            </a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>