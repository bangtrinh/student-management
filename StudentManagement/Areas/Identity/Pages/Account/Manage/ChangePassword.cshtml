@page
@model ChangePasswordModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<StudentManagement.SharedResources> Localizer
@{
    ViewData["Title"] = Localizer["ChangePassword"];
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center align-items-center min-vh-100" style="background-color: #F4F6F9;">
    <div class="card border-0 shadow-lg p-5 w-75" style="border-radius: 16px; background: #fff; max-width: 900px; min-width: 600px;">
        <div class="text-center mb-4">
            <h3 class="fw-bold text-dark">@Localizer["ChangePassword"]</h3>
            <p class="text-muted small">@Localizer["EnterNewPassword"]</p>
        </div>

        <partial name="_StatusMessage" for="StatusMessage" />

        <form id="change-password-form" method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <!-- Old Password -->
            <div class="mb-3">
                <label asp-for="Input.OldPassword" class="form-label">@Localizer["OldPassword"]</label>
                <div class="input-group">
                    <input asp-for="Input.OldPassword" type="password" class="form-control rounded" placeholder="@Localizer["EnterOldPassword"]" required>
                    <span class="input-group-text bg-white border rounded-end" onclick="togglePassword('Input_OldPassword')">
                        <i class="bi bi-eye"></i>
                    </span>
                </div>
                <span asp-validation-for="Input.OldPassword" class="text-danger small"></span>
            </div>

            <!-- New Password -->
            <div class="mb-3">
                <label asp-for="Input.NewPassword" class="form-label">@Localizer["NewPassword"]</label>
                <div class="input-group">
                    <input asp-for="Input.NewPassword" type="password" class="form-control rounded" placeholder="@Localizer["EnterNewPassword"]" required>
                    <span class="input-group-text bg-white border rounded-end" onclick="togglePassword('Input_NewPassword')">
                        <i class="bi bi-eye"></i>
                    </span>
                </div>
                <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
            </div>

            <!-- Confirm Password -->
            <div class="mb-4">
                <label asp-for="Input.ConfirmPassword" class="form-label">@Localizer["ConfirmPassword"]</label>
                <div class="input-group">
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control rounded" placeholder="@Localizer["ConfirmPasswordPlaceholder"]" required>
                    <span class="input-group-text bg-white border rounded-end" onclick="togglePassword('Input_ConfirmPassword')">
                        <i class="bi bi-eye"></i>
                    </span>
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
            </div>

            <!-- Submit Button -->
            <!-- Buttons Row -->
            <div class="d-flex justify-content-between gap-3 mt-3">
                <button type="submit" class="btn btn-primary flex-fill text-white py-2"
                        style="background-color: #6A1B9A; border-radius: 8px; font-weight: 500;">
                    @Localizer["ChangePassword"]
                </button>

                <button type="button" class="btn btn-outline-secondary flex-fill py-2"
                        style="border-radius: 8px; font-weight: 500;"
                        onclick="window.location.href='/'">
                    @Localizer["Back"]
                </button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword(inputId) {
            var input = document.getElementById(inputId);
            if (input.type === "password") {
                input.type = "text";
            } else {
                input.type = "password";
            }
        }
    </script>
    <partial name="_ValidationScriptsPartial" />
}
