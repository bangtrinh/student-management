@page
@model ForgotPasswordModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["ForgotPassword"];
    Layout = "~/Views/Shared/_LoginRegisterLayout.cshtml";
}

<div class="text-center mb-4">
    <h1 class="fw-bold">@ViewData["Title"]</h1>
    <p class="text-muted">@Localizer["EnterEmailToReset"]</p>
</div>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>

    <div class="mb-3">
        <label asp-for="Input.Email" class="form-label">@Localizer["Email"]</label>
        <input asp-for="Input.Email" class="form-control"
               autocomplete="username"
               aria-required="true"
               placeholder="@Localizer["EmailPlaceholder"]" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="d-grid mb-3">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-envelope me-2"></i> @Localizer["SendResetRequest"]
        </button>
    </div>

    <div class="text-center">
        <a asp-page="./Login" class="text-muted text-decoration-none">
            <i class="fas fa-arrow-left me-1"></i> @Localizer["BackToLogin"]
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
