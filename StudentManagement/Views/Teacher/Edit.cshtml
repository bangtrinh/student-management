@model StudentManagement.Models.Teacher
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<StudentManagement.SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["EditTeacherTitle"];
}

<div class="content py-4">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-white border-bottom-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="card-title mb-0 text-primary">
                                <i class="fas fa-user-edit me-2"></i>@Localizer["EditTeacherTitle"]
                            </h3>
                        </div>
                    </div>

                    <div class="card-body">
                        <form asp-action="Edit" class="needs-validation" novalidate>
                            <input type="hidden" asp-for="TeacherID" />

                            <div class="row">
                                <!-- Left Column -->
                                <div class="col-md-6">
                                    <!-- Email (disabled) -->
                                    <div class="form-group mb-4">
                                        <label asp-for="Email" class="form-label fw-bold">@Localizer["Email"]</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                            <input asp-for="Email" class="form-control" disabled />
                                        </div>
                                        <span asp-validation-for="Email" class="text-danger small"></span>
                                    </div>

                                    <!-- Full Name -->
                                    <div class="form-group mb-4">
                                        <label asp-for="FullName" class="form-label fw-bold">@Localizer["FullName"]</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                            <input asp-for="FullName" class="form-control" placeholder="@Localizer["EnterFullName"]" />
                                        </div>
                                        <span asp-validation-for="FullName" class="text-danger small"></span>
                                    </div>
                                </div>

                                <!-- Right Column -->
                                <div class="col-md-6">
                                    <!-- Phone Number -->
                                    <div class="form-group mb-4">
                                        <label asp-for="PhoneNumber" class="form-label fw-bold">@Localizer["PhoneNumber"]</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                            <input asp-for="PhoneNumber" class="form-control" placeholder="@Localizer["EnterPhoneNumber"]" />
                                        </div>
                                        <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                                    </div>

                                    <!-- Department -->
                                    <div class="form-group mb-4">
                                        <label asp-for="DepartmentID" class="form-label fw-bold">@Localizer["Department"]</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-building"></i></span>
                                            <select asp-for="DepartmentID" class="form-select" asp-items="ViewBag.Departments">
                                                <option value="">@Localizer["SelectDepartment"]</option>
                                            </select>
                                        </div>
                                        <span asp-validation-for="DepartmentID" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Specialization (full width) -->
                            <div class="form-group mb-4">
                                <label asp-for="Specialization" class="form-label fw-bold">@Localizer["Speciality"]</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-graduation-cap"></i></span>
                                    <input asp-for="Specialization" class="form-control" placeholder="@Localizer["EnterSpeciality"]" />
                                </div>
                                <span asp-validation-for="Specialization" class="text-danger small"></span>
                            </div>

                            <div class="form-group mt-4 pt-3 border-top">
                                <div class="d-flex justify-content-end">
                                    <button type="submit" class="btn btn-primary px-4 me-2">
                                        <i class="fas fa-save me-2"></i>@Localizer["Save"]
                                    </button>
                                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                        <i class="fas fa-times me-2"></i>@Localizer["Back"]
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        <link rel="stylesheet" href="~/css/form-style.css" asp-append-version="true" / >
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}