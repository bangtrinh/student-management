@model IEnumerable<StudentManagement.Models.Teacher>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["TeacherList"];
}

<h2>@Localizer["TeacherList"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">@Localizer["AddTeacher"]</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Localizer["TeacherId"]</th>
            <th>@Localizer["FullName"]</th>
            <th>@Localizer["Email"]</th>
            <th>@Localizer["Phone"]</th>
            <th>@Localizer["Department"]</th>
            <th>@Localizer["Speciality"]</th>
            <th>@Localizer["Actions"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TeacherID</td>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Department?.DepartmentName</td>
                <td>@item.Specialization</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.TeacherID" class="btn btn-info btn-sm">@Localizer["Details"]</a>
                    <a asp-action="Edit" asp-route-id="@item.TeacherID" class="btn btn-warning btn-sm">@Localizer["Edit"]</a>
                    <a asp-action="Delete" asp-route-id="@item.TeacherID" class="btn btn-danger btn-sm">@Localizer["Delete"]</a>
                </td>
            </tr>
        }
    </tbody>
</table>
