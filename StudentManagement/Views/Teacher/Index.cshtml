@model IEnumerable<StudentManagement.Models.Teacher>

@{
    ViewData["Title"] = "Danh sách giảng viên";
}

<h2>Danh sách giảng viên</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm giảng viên mới</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Mã GV</th>
            <th>Họ và tên</th>
            <th>Email</th>
            <th>Số điện thoại</th>
            <th>Khoa</th>
            <th>Chuyên môn</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TeacherID</td>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Department.DepartmentName</td>
                <td>@item.Specialization</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.TeacherID" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@item.TeacherID" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.TeacherID" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>