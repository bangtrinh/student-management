@model StudentManagement.Models.Teacher

@{
    ViewData["Title"] = "Chi tiết giảng viên";
}

<h2>Chi tiết giảng viên</h2>

<div>
    <h4>@Model.FullName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Mã GV</dt>
        <dd class="col-sm-10">@Model.TeacherID</dd>
        <dt class="col-sm-2">Họ và tên</dt>
        <dd class="col-sm-10">@Model.FullName</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Số điện thoại</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>
        <dt class="col-sm-2">Khoa</dt>
        <dd class="col-sm-10">@Model.Department.DepartmentName</dd>
        <dt class="col-sm-2">Chuyên môn</dt>
        <dd class="col-sm-10">@Model.Specialization</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.TeacherID" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>