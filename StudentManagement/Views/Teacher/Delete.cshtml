@model StudentManagement.Models.Teacher
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<StudentManagement.SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["DeleteTeacherTitle"];
}

<div class="content py-4">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm border-danger">
                    <div class="card-header bg-white border-bottom-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="card-title mb-0 text-danger">
                                <i class="fas fa-exclamation-triangle me-2"></i>@Localizer["DeleteTeacherTitle"]
                            </h3>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="alert alert-danger border-danger" role="alert">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-exclamation-circle fa-2x me-3"></i>
                                <div>
                                    <h5 class="alert-heading mb-1">@Localizer["DeleteWarning"]</h5>
                                    <p class="mb-0">@Localizer["DeleteConfirmationMessage"]</p>
                                </div>
                            </div>
                        </div>

                        <div class="card border-0 shadow-none mb-4">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="avatar-lg bg-light-danger text-danger rounded-circle d-flex align-items-center justify-content-center me-4">
                                        <i class="fas fa-user-tie fa-lg"></i>
                                    </div>
                                    <div>
                                        <h4 class="mb-1">@Model.FullName</h4>
                                        <span class="text-muted">ID: @Model.TeacherID</span>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label text-muted small mb-1">@Localizer["Email"]</label>
                                            <p class="mb-0">@Model.Email</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label text-muted small mb-1">@Localizer["PhoneNumber"]</label>
                                            <p class="mb-0">@Model.PhoneNumber</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <form asp-action="Delete" class="mt-4">
                            <input type="hidden" asp-for="TeacherID" />

                            <div class="d-flex justify-content-end gap-3">
                                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                    <i class="fas fa-times me-2"></i>@Localizer["Back"]
                                </a>
                                <button type="submit" class="btn btn-danger px-4">
                                    <i class="fas fa-trash-alt me-2"></i>@Localizer["Confirm"]
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        <link rel="stylesheet" href="~/css/form-style.css" asp-append-version="true" / >
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}