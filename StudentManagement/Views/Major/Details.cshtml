@model StudentManagement.Models.Major

@{
    ViewData["Title"] = "Chi tiết ngành học";
}

<h2>Chi tiết ngành học</h2>

<div>
    <h4>@Model.MajorName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Mã ngành</dt>
        <dd class="col-sm-10">@Model.MajorID</dd>
        <dt class="col-sm-2">Tên ngành</dt>
        <dd class="col-sm-10">@Model.MajorName</dd>
        <dt class="col-sm-2">Khoa</dt>
        <dd class="col-sm-10">@Model.Department.DepartmentName</dd>
        <dt class="col-sm-2">Thời gian đào tạo</dt>
        <dd class="col-sm-10">@Model.Duration năm</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.MajorID" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>