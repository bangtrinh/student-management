@model StudentManagement.Models.Major

@{
    ViewData["Title"] = "Xóa ngành học";
}

<h2>Xóa ngành học</h2>

<h3>Bạn có chắc muốn xóa ngành học này?</h3>
<div>
    <h4>@Model.MajorName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Mã ngành</dt>
        <dd class="col-sm-10">@Model.MajorID</dd>
        <dt class="col-sm-2">Tên ngành</dt>
        <dd class="col-sm-10">@Model.MajorName</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MajorID" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>