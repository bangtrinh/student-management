@model StudentManagement.Models.Major

@{
    ViewData["Title"] = "Sửa thông tin ngành học";
}

<h2>Sửa thông tin ngành học</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="MajorID" />
    <div class="form-group">
        <label asp-for="MajorName" class="control-label"></label>
        <input asp-for="MajorName" class="form-control" />
        <span asp-validation-for="MajorName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DepartmentID" class="control-label"></label>
        <select asp-for="DepartmentID" class="form-control" asp-items="ViewBag.Departments"></select>
        <span asp-validation-for="DepartmentID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Duration" class="control-label"></label>
        <input asp-for="Duration" class="form-control" type="number" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Lưu" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}