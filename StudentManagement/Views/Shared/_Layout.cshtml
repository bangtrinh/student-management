@using System.Security.Claims
@using System.Globalization
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentManagement</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    @RenderSection("Styles", required: false)
    <style>
        body {
            display: flex;
            min-height: 100vh;
            flex-direction: column;
        }

        .navbar {
            width: 100%;
            z-index: 1000;
        }

        .wrapper {
            display: flex;
            flex: 1;
        }

        .sidebar {
            width: 250px;
            background-color: #343a40;
            padding: 20px;
            min-height: 100vh;
            color: white;
            transition: width 0.3s;
            overflow: hidden;
        }

            .sidebar a {
                color: white;
                display: flex;
                align-items: center;
                padding: 10px;
                text-decoration: none;
                font-size: 16px;
                white-space: nowrap;
            }

                .sidebar a i {
                    margin-right: 10px;
                }

                .sidebar a:hover {
                    background-color: #495057;
                }

            .sidebar.collapsed {
                width: 60px;
            }

                .sidebar.collapsed a {
                    justify-content: center;
                }

                    .sidebar.collapsed a span {
                        display: none;
                    }

        .toggle-btn {
            background: none;
            border: none;
            color: white;
            font-size: 20px;
            cursor: pointer;
            display: block;
            margin-bottom: 20px;
        }

        .content {
            flex: 1;
            padding: 20px;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">StudentManagement</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto me-2">
                    <partial name="_LoginPartial" />
                </ul>
            </div>
        </div>
    </nav>

    <div class="wrapper">
        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <button class="toggle-btn" onclick="toggleSidebar()">☰</button>
            <a asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> <span>@Localizer["Home"]</span></a>

            @if (User.IsInRole("Teacher"))
            {
                <a asp-area="" asp-controller="Teacher" asp-action="MyCourses"><i class="fas fa-school"></i> <span>@Localizer["Classes"]</span></a>
                <a asp-area="" asp-controller="Teacher" asp-action="Schedule"><i class="fas fa-chart-bar"></i> <span>@Localizer["TeachingSchedule"]</span></a>
                <a asp-area="" asp-controller="Chat" asp-action="Index"><i class="fas fa-comments"></i> <span>@Localizer["Messages"]</span></a>
            }

            @if (User.IsInRole("Student"))
            {
                <a asp-area="" asp-controller="Student" asp-action="Profile"><i class="fas fa-id-card"></i> <span>@Localizer["Profile"]</span></a>
                <a asp-area="" asp-controller="Student" asp-action="Schedule"><i class="fas fa-id-card"></i> <span>@Localizer["Schedule"]</span></a>
                <a asp-area="" asp-controller="Grade" asp-action="MyGrades"><i class="fas fa-chart-bar"></i> <span>@Localizer["Grades"]</span></a>
                <a asp-area="" asp-controller="Student" asp-action="MyCourses"><i class="fas fa-id-card"></i> <span>@Localizer["Subjects"]</span></a>
                <a asp-area="" asp-controller="CourseRegister" asp-action="Index"><i class="fas fa-id-card"></i> <span>@Localizer["RegisterCourses"]</span></a>
                <a asp-area="" asp-controller="Chat" asp-action="Index"><i class="fas fa-comments"></i> <span>@Localizer["Messages"]</span></a>
                <a asp-area="" asp-controller="ChatBot" asp-action="Index"><i class="fas fa-robot"></i> <span>@Localizer["ChatBot"]</span></a>
            }

            @if (User.IsInRole("Admin"))
            {
                <a asp-area="Admin" asp-controller="Account" asp-action="Index"><i class="fas fa-id-card"></i> <span>@Localizer["ManageAccounts"]</span></a>
                <a asp-area="" asp-controller="Student" asp-action="Index"><i class="fas fa-id-card"></i> <span>@Localizer["Students"]</span></a>
                <a asp-area="" asp-controller="Teacher" asp-action="Index"><i class="fas fa-chalkboard-teacher"></i> <span>@Localizer["Teachers"]</span></a>
                <a asp-area="" asp-controller="Class" asp-action="Index"><i class="fas fa-id-card"></i> <span>@Localizer["Classes"]</span></a>
                <a asp-area="" asp-controller="Major" asp-action="Index"><i class="fas fa-book"></i> <span>@Localizer["Majors"]</span></a>
                <a asp-area="" asp-controller="Department" asp-action="Index"><i class="fas fa-building"></i> <span>@Localizer["Departments"]</span></a>
                <a asp-area="" asp-controller="Course" asp-action="Index"><i class="fas fa-book-open"></i> <span>@Localizer["Courses"]</span></a>
                <a asp-area="" asp-controller="Schedule" asp-action="Index"><i class="fas fa-id-card"></i> <span>@Localizer["Schedule"]</span></a>
                <a asp-area="" asp-controller="Report" asp-action="GradeReport"><i class="fas fa-id-card"></i> <span>@Localizer["Statistics"]</span></a>
            }

            <hr>
        </div>

        <form asp-area="" asp-controller="Language" asp-action="SetLanguage" method="post" class="ml-2 mt-2">
            <select name="culture" onchange="this.form.submit()" class="form-select btn btn-outline-secondary w-auto">
                <option value="vi" selected="@(CultureInfo.CurrentUICulture.Name == "vi" ? "selected" : null)">Tiếng Việt</option>
                <option value="en" selected="@(CultureInfo.CurrentUICulture.Name == "en" ? "selected" : null)">English</option>
            </select>
            <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
        </form>

