@model StudentManagement.Models.Schedule
@{
    ViewData["Title"] = "Delete Schedule";
}

<h2>Delete Schedule</h2>

<h4>Are you sure you want to delete this schedule?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Schedule ID</dt>
        <dd class="col-sm-10">@Model.ScheduleID</dd>

        <dt class="col-sm-2">Course</dt>
        <dd class="col-sm-10">@Model.Course.CourseName</dd>

        <dt class="col-sm-2">Teacher</dt>
        <dd class="col-sm-10">@Model.Course.Teacher.FullName</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.ClassDate.ToString("dd/MM/yyyy")</dd>
    </dl>
</div>

<form asp-controller="Schedule" asp-action="Delete" method="post">
    <input type="hidden" asp-for="ScheduleID" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
