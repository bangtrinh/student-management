@model StudentManagement.Models.Schedule
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<StudentManagement.SharedResources> Localizer

@{
    Layout = "~/Views/Shared/_PartialViewLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Create" method="post" class="needs-validation" novalidate>
            <input type="hidden" asp-for="StudentID" value="@ViewBag.StudentID" />

            <!-- Course -->
            <div class="form-group mb-3">
                <label asp-for="CourseID" class="form-label fw-bold">@Localizer["Course"]</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-book"></i></span>
                    <select asp-for="CourseID" class="form-select" asp-items="ViewBag.Courses"></select>
                </div>
                <span asp-validation-for="CourseID" class="text-danger small"></span>
            </div>

            <!-- Class Date -->
            <div class="form-group mb-3">
                <label asp-for="ClassDate" class="form-label fw-bold">@Localizer["ClassDate"]</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                    <input asp-for="ClassDate" class="form-control" type="date" value="@ViewBag.ClassDate" readonly />
                </div>
                <span asp-validation-for="ClassDate" class="text-danger small"></span>
            </div>

            <!-- Start Time -->
            <div class="form-group mb-3">
                <label asp-for="StartTime" class="form-label fw-bold">@Localizer["StartTime"]</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-clock"></i></span>
                    <input asp-for="StartTime" class="form-control" type="time" value="@ViewBag.StartTime" />
                </div>
                <span asp-validation-for="StartTime" class="text-danger small"></span>
            </div>

            <!-- End Time -->
            <div class="form-group mb-3">
                <label asp-for="EndTime" class="form-label fw-bold">@Localizer["EndTime"]</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-clock"></i></span>
                    <input asp-for="EndTime" class="form-control" type="time" value="@ViewBag.EndTime" />
                </div>
                <span asp-validation-for="EndTime" class="text-danger small"></span>
            </div>

            <!-- Buttons -->
            <div class="form-group mt-4 pt-3 border-top">
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary px-4 me-2">
                        <i class="fas fa-save me-2"></i>@Localizer["Add"]
                    </button>
                    <a asp-controller="Schedule" asp-action="Index" asp-route-studentId="@Model.StudentID" class="btn btn-outline-secondary px-4">
                        <i class="fas fa-times me-2"></i>@Localizer["Back"]
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
