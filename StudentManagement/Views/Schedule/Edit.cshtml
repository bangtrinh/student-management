@model StudentManagement.Models.Schedule
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<StudentManagement.SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["EditScheduleTitle"];
}

<div class="content py-4">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-white border-bottom-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="card-title mb-0 text-primary">
                                <i class="fas fa-edit me-2"></i>@Localizer["EditScheduleTitle"]
                            </h3>
                        </div>
                    </div>

                    <div class="card-body">
                        <form asp-action="Edit" class="needs-validation" novalidate>
                            <input type="hidden" asp-for="ScheduleID" />
                            <input type="hidden" asp-for="StudentID" />

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label asp-for="CourseID" class="form-label fw-bold">@Localizer["Course"]</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-book"></i></span>
                                            <select asp-for="CourseID" class="form-select" asp-items="ViewBag.Courses">
                                                <option value="">@Localizer["SelectCourse"]</option>
                                            </select>
                                        </div>
                                        <span asp-validation-for="CourseID" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label asp-for="ClassDate" class="form-label fw-bold">@Localizer["Date"]</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-calendar-day"></i></span>
                                            <input asp-for="ClassDate" class="form-control" type="date" />
                                        </div>
                                        <span asp-validation-for="ClassDate" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label asp-for="StartTime" class="form-label fw-bold">@Localizer["StartTime"]</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-clock"></i></span>
                                            <input asp-for="StartTime" class="form-control" type="time" value="@Model.StartTime.ToString(@"hh\:mm")" />
                                        </div>
                                        <span asp-validation-for="StartTime" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label asp-for="EndTime" class="form-label fw-bold">@Localizer["EndTime"]</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-clock"></i></span>
                                            <input asp-for="EndTime" class="form-control" type="time" value="@Model.EndTime.ToString(@"hh\:mm")" />
                                        </div>
                                        <span asp-validation-for="EndTime" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mt-4 pt-3 border-top">
                                <div class="d-flex justify-content-end">
                                    <button type="submit" class="btn btn-primary px-4 me-2">
                                        <i class="fas fa-save me-2"></i>@Localizer["Save"]
                                    </button>
                                    <a asp-controller="Schedule" asp-action="Index" asp-route-studentId="@Model.StudentID" class="btn btn-outline-secondary px-4">
                                        <i class="fas fa-arrow-left me-2"></i>@Localizer["Back"]
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        <link rel="stylesheet" href="~/css/form-style.css" asp-append-version="true" / >
    </style>
}


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}