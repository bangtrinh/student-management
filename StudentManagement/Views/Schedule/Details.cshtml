@model StudentManagement.Models.Schedule
@{
    Layout = "~/Views/Shared/_PartialViewLayout.cshtml"; 
}
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Schedule ID</dt>
        <dd class="col-sm-10">@Model.ScheduleID</dd>

        <dt class="col-sm-2">Course</dt>
        <dd class="col-sm-10">@Model.Course.CourseName</dd>

        <dt class="col-sm-2">Teacher</dt>
        <dd class="col-sm-10">@Model.Course.Teacher.FullName</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.ClassDate.ToString("dd/MM/yyyy")</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.ScheduleID" class="btn btn-warning">Edit</a>
<a asp-action="Delete" asp-route-id="@Model.ScheduleID" class="btn btn-danger">Delete</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
