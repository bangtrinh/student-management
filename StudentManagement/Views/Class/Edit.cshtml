@model StudentManagement.Models.Class
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<StudentManagement.SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["EditClassTitle"];
}

<div class="content py-4">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-white border-bottom-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="card-title mb-0 text-primary">
                                <i class="fas fa-edit me-2"></i>@Localizer["EditClassTitle"]
                            </h3>
                        </div>
                    </div>

                    <div class="card-body">
                        <form asp-action="Edit" class="needs-validation" novalidate>
                            <input type="hidden" asp-for="ClassID" />

                            <div class="row">
                                <div class="col-md-6">
                                    <!-- Class Name -->
                                    <div class="form-group mb-4">
                                        <label asp-for="ClassName" class="form-label fw-bold">@Localizer["ClassName"]</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-users"></i></span>
                                            <input asp-for="ClassName" class="form-control" placeholder="@Localizer["EnterClassName"]" />
                                        </div>
                                        <span asp-validation-for="ClassName" class="text-danger small"></span>
                                    </div>

                                    <!-- Major -->
                                    <div class="form-group mb-4">
                                        <label asp-for="MajorID" class="form-label fw-bold">@Localizer["Major"]</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-graduation-cap"></i></span>
                                            <select asp-for="MajorID" class="form-select" asp-items="ViewBag.Majors">
                                                <option value="">@Localizer["SelectMajor"]</option>
                                            </select>
                                        </div>
                                        <span asp-validation-for="MajorID" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <!-- Teacher -->
                                    <div class="form-group mb-4">
                                        <label asp-for="TeacherID" class="form-label fw-bold">@Localizer["Teacher"]</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-chalkboard-teacher"></i></span>
                                            <select asp-for="TeacherID" class="form-select" asp-items="ViewBag.Teachers">
                                                <option value="">@Localizer["SelectTeacher"]</option>
                                            </select>
                                        </div>
                                        <span asp-validation-for="TeacherID" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <!-- Start Date -->
                                    <div class="form-group mb-4">
                                        <label asp-for="StartDate" class="form-label fw-bold">@Localizer["StartDate"]</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-calendar-day"></i></span>
                                            <input asp-for="StartDate" class="form-control" type="date" />
                                        </div>
                                        <span asp-validation-for="StartDate" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <!-- End Date -->
                                    <div class="form-group mb-4">
                                        <label asp-for="EndDate" class="form-label fw-bold">@Localizer["EndDate"]</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-calendar-times"></i></span>
                                            <input asp-for="EndDate" class="form-control" type="date" />
                                        </div>
                                        <span asp-validation-for="EndDate" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mt-4 pt-3 border-top">
                                <div class="d-flex justify-content-end">
                                    <button type="submit" class="btn btn-primary px-4 me-2">
                                        <i class="fas fa-save me-2"></i>@Localizer["Save"]
                                    </button>
                                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                        <i class="fas fa-times me-2"></i>@Localizer["Back"]
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        <link rel="stylesheet" href="~/css/form-style.css" asp-append-version="true" / >
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}