@model List<StudentManagement.Models.Schedule>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["StudentAverageReport"];
}

<h2>@Localizer["StudentAverageReport"]</h2>

<form method="get">
    <div class="row mb-3">
        <div class="col-md-3">
            <label>@Localizer["AcademicYear"]</label>
            <input type="text" name="academicYear" class="form-control" placeholder="@Localizer["AcademicYearPlaceholder"]" />
        </div>
        <div class="col-md-2">
            <label>@Localizer["Semester"]</label>
            <select name="semester" class="form-control">
                <option value="">@Localizer["SelectSemester"]</option>
                <option value="1">@Localizer["Semester1"]</option>
                <option value="2">@Localizer["Semester2"]</option>
            </select>
        </div>
        <div class="col-md-2">
            <label>@Localizer["Class"]</label>
            <select name="classId" class="form-control">
                <option value="">@Localizer["AllClasses"]</option>
                <!-- Có thể thêm option từ controller -->
            </select>
        </div>
        <div class="col-md-2">
            <label>@Localizer["Major"]</label>
            <select name="majorId" class="form-control">
                <option value="">@Localizer["AllMajors"]</option>
            </select>
        </div>
        <div class="col-md-2 align-self-end">
            <button type="submit" class="btn btn-primary">@Localizer["GenerateReport"]</button>
        </div>
    </div>
</form>

@if (!Model.Any())
{
    <div class="alert alert-info">
        @Localizer["NoDataMessage"]
    </div>
}
