@model StudentManagement.Models.ViewModel.ChartData

@if (Model != null)
{
    <div class="card">
        <div class="card-header">
            <h5>Phân bố điểm trung bình</h5>
        </div>
        <div class="card-body">
            <canvas id="gradeDistributionChart" height="200"></canvas>
        </div>
    </div>

    <script>
        $(document).ready(function() {
            var ctx = document.getElementById('gradeDistributionChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.Labels)),
                    datasets: [{
                        label: 'Số lượng sinh viên',
                        data: @Html.Raw(Json.Serialize(Model.Data)),
                        backgroundColor: 'rgba(54, 162, 235, 0.5)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: { y: { beginAtZero: true, precision: 0 } }
                }
            });
        });
    </script>
}
else
{
    <div class="alert alert-warning">Không có dữ liệu biểu đồ</div>
}