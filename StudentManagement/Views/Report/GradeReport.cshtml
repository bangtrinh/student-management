@model List<StudentManagement.Models.ViewModel.StudentGradeSummary>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["StudentAverageReport"];
}

<h2>@Localizer["StudentAverageReport"]</h2>

<form asp-action="GradeReport" method="post" class="mb-4">
    <div class="form-row">
        <div class="form-group col-md-3">
            <label for="academicYear">@Localizer["AcademicYear"] (VD: 2023-2024)</label>
            <input type="text" class="form-control" id="academicYear" name="academicYear"
                   pattern="\d{4}-\d{4}" title="YYYY-YYYY" required />
        </div>
        <div class="form-group col-md-2">
            <label for="semester">@Localizer["Semester"]</label>
            <select class="form-control" id="semester" name="semester" required>
                <option value="">@Localizer["SelectSemester"]</option>
                <option value="HK1">@Localizer["Semester1"]</option>
                <option value="HK2">@Localizer["Semester2"]</option>
                <option value="HK3">@Localizer["Semester3"]</option>
            </select>
        </div>
        <div class="form-group col-md-2">
            <label for="classId">@Localizer["Class"]</label>
            <select class="form-control" id="classId" name="classId" asp-items="ViewBag.Classes">
                <option value="">@Localizer["AllClasses"]</option>
            </select>
        </div>
        <div class="form-group col-md-2">
            <label for="majorId">@Localizer["Major"]</label>
            <select class="form-control" id="majorId" name="majorId" asp-items="ViewBag.Majors">
                <option value="">@Localizer["AllMajors"]</option>
            </select>
        </div>
        <div class="form-group col-md-3 d-flex align-items-end">
            <button type="submit" class="btn btn-primary mr-2">@Localizer["GenerateReport"]</button>
            @if (Model != null && Model.Any())
            {
                <a href="@Url.Action("ExportToExcel", new {
                    academicYear = ViewBag.AcademicYear,
                    semester = ViewBag.Semester,
                    classId = ViewBag.ClassId,
                    majorId = ViewBag.MajorId
                })" class="btn btn-success">
                    @Localizer["Export"]
                </a>
            }
        </div>
    </div>
</form>

@if (Model != null)
{
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>@Localizer["Overview"]</h5>
                </div>
                <div class="card-body">
                    <p>@Localizer["TotalStudents"]: @ViewBag.TotalCount</p>
                    <p>@Localizer["MaxScore"]: @Model.Max(s => s.AverageScore)?.ToString("0.00")</p>
                    <p>@Localizer["MinScore"]: @Model.Min(s => s.AverageScore)?.ToString("0.00")</p>
                    <p>@Localizer["AvgScore"]: @Model.Average(s => s.AverageScore)?.ToString("0.00")</p>
                </div>
            </div>
        </div>
    </div>
    <div class="table-responsive mb-4">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>@Localizer["StudentId"]</th>
                    <th>@Localizer["FullName"]</th>
                    <th>@Localizer["Class"]</th>
                    <th>@Localizer["Major"]</th>
                    <th>@Localizer["AcademicYear"]</th>
                    <th>@Localizer["Semester"]</th>
                    <th>@Localizer["AvgScore"]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.StudentID</td>
                        <td>@item.FullName</td>
                        <td>@item.ClassName</td>
                        <td>@item.MajorName</td>
                        <td>@item.AcademicYear</td>
                        <td>@item.Semester</td>
                        <td>@item.AverageScore?.ToString("0.00")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (ViewBag.TotalCount > ViewBag.PageSize)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @for (int i = 1; i <= Math.Ceiling((double)ViewBag.TotalCount / ViewBag.PageSize); i++)
                {
                    <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                        <a class="page-link"
                           href="@Url.Action("GenerateGradeReport", new {
                               academicYear = ViewBag.AcademicYear,
                               semester = ViewBag.Semester,
                               classId = ViewBag.ClassId,
                               majorId = ViewBag.MajorId,
                               page = i,
                               pageSize = ViewBag.PageSize
                           })">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
}
else
{
    <div class="alert alert-info">
        @if (ViewData.ModelState.IsValid)
        {
            @Localizer["NoDataMessage"]
        }
        else
        {
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        }
    </div>
}
