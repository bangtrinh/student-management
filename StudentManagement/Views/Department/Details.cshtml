@model StudentManagement.Models.Department

@{
    ViewData["Title"] = "Chi tiết khoa";
}

<h2>Chi tiết khoa</h2>

<div>
    <h4>@Model.DepartmentName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Mã khoa</dt>
        <dd class="col-sm-10">@Model.DepartmentID</dd>
        <dt class="col-sm-2">Tên khoa</dt>
        <dd class="col-sm-10">@Model.DepartmentName</dd>
        <dt class="col-sm-2">Trưởng khoa</dt>
        <dd class="col-sm-10">@Model.HeadOfDepartment</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.DepartmentID" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>  