@model StudentManagement.Models.Department
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<StudentManagement.SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["DepartmentDetailsTitle"];
}

<div class="content py-4">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-white border-bottom-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="card-title mb-0 text-primary">
                                <i class="fas fa-building me-2"></i>@Localizer["DepartmentDetailsTitle"]
                            </h3>
                        </div>
                    </div>

                    <div class="card-body">
                        <!-- Department Profile Header -->
                        <div class="d-flex align-items-center mb-4">
                            <div>
                                <h3 class="mb-1">@Model.DepartmentName</h3>
                                <span class="badge bg-primary">@Model.DepartmentID</span>
                            </div>
                        </div>

                        <!-- Department Details -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label class="form-label text-muted small mb-1">@Localizer["ID"]</label>
                                    <p class="fs-5">
                                        <i class="fas fa-id-card me-2 text-muted"></i>
                                        @Model.DepartmentID
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label class="form-label text-muted small mb-1">@Localizer["DepartmentName"]</label>
                                    <p class="fs-5">
                                        <i class="fas fa-signature me-2 text-muted"></i>
                                        @Model.DepartmentName
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-4">
                                    <label class="form-label text-muted small mb-1">@Localizer["HeadOfDepartment"]</label>
                                    <p class="fs-5">
                                        <i class="fas fa-user-tie me-2 text-muted"></i>
                                        @Model.HeadOfDepartment
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-end gap-3 mt-4 pt-3 border-top">
                            <a asp-action="Edit" asp-route-id="@Model.DepartmentID" class="btn btn-warning px-4">
                                <i class="fas fa-edit me-2"></i>@Localizer["Edit"]
                            </a>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="fas fa-arrow-left me-2"></i>@Localizer["Back"]
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        <link rel="stylesheet" href="~/css/form-style.css" asp-append-version="true" / >
    </style>
}