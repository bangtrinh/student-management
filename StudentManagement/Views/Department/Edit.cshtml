@model StudentManagement.Models.Department
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<StudentManagement.SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["EditDepartmentTitle"];
}

<div class="content py-4">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-white border-bottom-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="card-title mb-0 text-primary">
                                <i class="fas fa-edit me-2"></i>@Localizer["EditDepartmentTitle"]
                            </h3>
                        </div>
                    </div>

                    <div class="card-body">
                        <form asp-action="Edit" class="needs-validation" novalidate>
                            <input type="hidden" asp-for="DepartmentID" />

                            <div class="row">
                                <!-- Left Column -->
                                <div class="col-md-6">
                                    <!-- Department ID (disabled) -->
                                    <div class="form-group mb-4">
                                        <label asp-for="DepartmentID" class="form-label fw-bold">@Localizer["ID"]</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                                            <input asp-for="DepartmentID" class="form-control" disabled />
                                        </div>
                                        <span asp-validation-for="DepartmentID" class="text-danger small"></span>
                                    </div>
                                </div>

                                <!-- Right Column -->
                                <div class="col-md-6">
                                    <!-- Department Name -->
                                    <div class="form-group mb-4">
                                        <label asp-for="DepartmentName" class="form-label fw-bold">@Localizer["DepartmentName"]</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-building"></i></span>
                                            <input asp-for="DepartmentName" class="form-control" placeholder="@Localizer["EnterDepartmentName"]" />
                                        </div>
                                        <span asp-validation-for="DepartmentName" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Head of Department (full width) -->
                            <div class="form-group mb-4">
                                <label asp-for="HeadOfDepartment" class="form-label fw-bold">@Localizer["HeadOfDepartment"]</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user-tie"></i></span>
                                    <input asp-for="HeadOfDepartment" class="form-control" placeholder="@Localizer["EnterHeadOfDepartment"]" />
                                </div>
                                <span asp-validation-for="HeadOfDepartment" class="text-danger small"></span>
                            </div>

                            <div class="form-group mt-4 pt-3 border-top">
                                <div class="d-flex justify-content-end">
                                    <button type="submit" class="btn btn-primary px-4 me-2">
                                        <i class="fas fa-save me-2"></i>@Localizer["Save"]
                                    </button>
                                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                        <i class="fas fa-times me-2"></i>@Localizer["Back"]
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        <link rel="stylesheet" href="~/css/form-style.css" asp-append-version="true" / >
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}