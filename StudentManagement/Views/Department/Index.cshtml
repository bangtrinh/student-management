@model IEnumerable<StudentManagement.Models.Department>

@{
    ViewData["Title"] = "Danh sách khoa";
}

<h2>Danh sách khoa</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm khoa mới</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Mã khoa</th>
            <th>Tên khoa</th>
            <th>Trưởng khoa</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DepartmentID</td>
                <td>@item.DepartmentName</td>
                <td>@item.HeadOfDepartment</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.DepartmentID" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@item.DepartmentID" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.DepartmentID" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>