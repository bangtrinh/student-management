@model IEnumerable<StudentManagement.Models.Department>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["DepartmentList"];
}

<h2>@Localizer["DepartmentList"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">@Localizer["AddDepartment"]</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Localizer["DepartmentId"]</th>
            <th>@Localizer["DepartmentName"]</th>
            <th>@Localizer["Head"]</th>
            <th>@Localizer["Actions"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DepartmentID</td>
                <td>@item.DepartmentName</td>
                <td>@item.HeadOfDepartment</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.DepartmentID" class="btn btn-info btn-sm">@Localizer["Details"]</a>
                    <a asp-action="Edit" asp-route-id="@item.DepartmentID" class="btn btn-warning btn-sm">@Localizer["Edit"]</a>
                    <a asp-action="Delete" asp-route-id="@item.DepartmentID" class="btn btn-danger btn-sm">@Localizer["Delete"]</a>
                </td>
            </tr>
        }
    </tbody>
</table>
