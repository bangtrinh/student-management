@model StudentManagement.Models.Grade

<h5 class="modal-title">Chỉnh sửa điểm</h5>
<form asp-action="EditGrade" method="post">
    <input type="hidden" asp-for="GradeID" />
    <input type="hidden" asp-for="CourseID" />
    <input type="hidden" asp-for="StudentID" />
    <div class="form-group">
        <label asp-for="Score" class="control-label">Điểm</label>
        <input asp-for="Score" class="form-control" type="number" step="0.1" min="0" max="10" />
        <span asp-validation-for="Score" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}