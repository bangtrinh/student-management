@model StudentManagement.Models.Grade

@{
    ViewData["Title"] = "Xóa điểm số";
}

<h2>Xóa điểm số</h2>

<h3>Bạn có chắc muốn xóa điểm số này?</h3>
<div>
    <h4>Mã điểm: @Model.GradeID</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Mã điểm</dt>
        <dd class="col-sm-10">@Model.GradeID</dd>
        <dt class="col-sm-2">Mã SV</dt>
        <dd class="col-sm-10">@Model.StudentID</dd>
        <dt class="col-sm-2">Mã môn học</dt>
        <dd class="col-sm-10">@Model.CourseID</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="GradeID" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>