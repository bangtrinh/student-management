@model StudentManagement.Models.Grade

@{
    ViewData["Title"] = "Chi tiết điểm số";
}

<h2>Chi tiết điểm số</h2>

<div>
    <h4>Mã điểm: @Model.GradeID</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Mã điểm</dt>
        <dd class="col-sm-10">@Model.GradeID</dd>
        <dt class="col-sm-2">Mã SV</dt>
        <dd class="col-sm-10">@Model.StudentID</dd>
        <dt class="col-sm-2">Mã môn học</dt>
        <dd class="col-sm-10">@Model.CourseID</dd>
        <dt class="col-sm-2">Điểm</dt>
        <dd class="col-sm-10">@Model.Score</dd>
        <dt class="col-sm-2">Học kỳ</dt>
        <dd class="col-sm-10">@Model.Semester</dd>
        <dt class="col-sm-2">Năm học</dt>
        <dd class="col-sm-10">@Model.AcademicYear</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.GradeID" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>