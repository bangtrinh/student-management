@model StudentManagement.Models.Course

<!-- Thêm Bootstrap CSS và JS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="container mt-4">
    <h2 class="fw-bold text-dark mb-4">
        <i class="bi bi-book-fill text-primary me-2"></i> Chi tiết môn học
    </h2>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0 fw-semibold">@Model.CourseName</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold text-muted">Mã môn học</dt>
                <dd class="col-sm-9">@Model.CourseID</dd>
                <dt class="col-sm-3 fw-bold text-muted">Tên môn học</dt>
                <dd class="col-sm-9">@Model.CourseName</dd>
                <dt class="col-sm-3 fw-bold text-muted">Số tín chỉ</dt>
                <dd class="col-sm-9">@Model.Credits</dd>
            </dl>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0 fw-semibold">
                <i class="bi bi-people-fill me-2"></i> Danh sách sinh viên
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Grades.Any())
            {
                <table class="table table-striped table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th scope="col" class="ps-3">Mã SV</th>
                            <th scope="col">Họ và Tên</th>
                            <th scope="col">Email</th>
                            <th scope="col">Điểm</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var grade in Model.Grades)
                        {
                            <tr>
                                <td class="ps-3">@grade.Student.StudentID</td>
                                <td>@grade.Student.FullName</td>
                                <td>@grade.Student.Email</td>
                                <td class="text-center">
                                    <input type="number" step="0.1" min="0" max="10"
                                           class="form-control form-control-sm grade-input text-center"
                                           data-grade-id="@grade.GradeID"
                                           value="@(grade.Score.HasValue ? grade.Score.Value.ToString("0.0") : "Chưa có")"
                                           placeholder="Chưa có" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info m-3">
                    <i class="bi bi-info-circle me-2"></i> Không có sinh viên nào đăng ký môn học này.
                </div>
            }
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('.grade-input').on('keypress', function (e) {
            if (e.which === 13) { // Enter
                e.preventDefault();
                var input = $(this);
                var gradeId = input.data('grade-id');
                var score = input.val();

                // Kiểm tra giá trị hợp lệ
                if (score !== '' && (score < 0 || score > 10)) {
                    alert('Điểm phải nằm trong khoảng từ 0 đến 10.');
                    return;
                }

                // Gửi AJAX với JSON
                $.ajax({
                    url: '/Grade/EditGrade',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ gradeId: gradeId, grade: parseFloat(score) }),
                    success: function (response) {
                        alert(response.message);
                        input.val(parseFloat(score).toFixed(1)); // Cập nhật giao diện
                    },
                    error: function (xhr) {
                        alert(xhr.responseJSON?.message || "Có lỗi xảy ra!");
                    }
                });
            }
        });
    });
</script>

<style>
    .grade-input {
        width: 80px;
        margin: 0 auto;
    }
</style>