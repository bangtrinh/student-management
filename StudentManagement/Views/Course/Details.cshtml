@model IEnumerable<StudentManagement.Models.CourseRegistrationItem>
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<StudentManagement.SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["CourseRegistrationTitle"];
}

<div class="content py-4">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-sm">
                    <div class="card-header bg-white border-bottom-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="card-title mb-0 text-primary">
                                <i class="fas fa-book me-2"></i>@Localizer["CourseRegistrationTitle"]
                            </h3>
                        </div>
                    </div>

                    <div class="card-body">
                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                                <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="@Localizer["Close"]"></button>
                            </div>
                        }

                        <form method="post">
                            <input type="hidden" name="StudentID" value="@ViewBag.StudentId" />

                            <div class="table-responsive">
                                <table class="table table-hover align-middle">
                                    <thead class="bg-light">
                                        <tr>
                                            <th class="ps-3">@Localizer["CourseCode"]</th>
                                            <th>@Localizer["CourseName"]</th>
                                            <th>@Localizer["Teacher"]</th>
                                            <th>@Localizer["Room"]</th>
                                            <th class="text-center">@Localizer["Register"]</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.Count(); i++)
                                        {
                                            <tr>
                                                <td class="ps-3">
                                                    <input type="hidden" name="[@i].CourseID" value="@Model.ElementAt(i).CourseID" />
                                                    <span class="badge bg-primary">@Model.ElementAt(i).CourseID</span>
                                                </td>
                                                <td>
                                                    <input type="hidden" name="[@i].CourseName" value="@Model.ElementAt(i).CourseName" />
                                                    @Model.ElementAt(i).CourseName
                                                </td>
                                                <td>
                                                    <input type="hidden" name="[@i].TeacherName" value="@Model.ElementAt(i).TeacherName" />
                                                    <div class="d-flex align-items-center">
                                                        <div class="avatar-sm bg-light rounded-circle me-2 d-flex align-items-center justify-content-center">
                                                            <i class="fas fa-user text-muted"></i>
                                                        </div>
                                                        <div>@Model.ElementAt(i).TeacherName</div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <input type="hidden" name="[@i].Room" value="@Model.ElementAt(i).Room" />
                                                    <span class="badge bg-light text-dark">
                                                        <i class="fas fa-door-open me-1"></i>@Model.ElementAt(i).Room
                                                    </span>
                                                </td>
                                                <td class="text-center">
                                                    <div class="form-check form-switch d-inline-block">
                                                        <input class="form-check-input" type="checkbox" role="switch"
                                                               name="[@i].IsSelected" value="true"
                                                        @(Model.ElementAt(i).IsSelected ? "checked" : "")>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <div class="d-flex justify-content-end gap-3 mt-4 pt-3 border-top">
                                <button type="submit" class="btn btn-primary px-4">
                                    <i class="fas fa-save me-2"></i>@Localizer["SaveRegistration"]
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                    <i class="fas fa-arrow-left me-2"></i>@Localizer["Back"]
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/form-style.css" asp-append-version="true" />

    <style>
        .avatar-sm {
            width: 32px;
            height: 32px;
            font-size: 14px;
        }

        .form-check-input {
            width: 3em;
            height: 1.5em;
        }

        .table th {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.8rem;
            letter-spacing: 0.5px;
        }
    </style>
}