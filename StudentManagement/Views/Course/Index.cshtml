@model IEnumerable<StudentManagement.Models.Course>
@using Microsoft.Extensions.Localization
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["CourseList"];
}

<h2>@Localizer["CourseList"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">@Localizer["AddCourse"]</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Localizer["CourseId"]</th>
            <th>@Localizer["CourseName"]</th>
            <th>@Localizer["Credits"]</th>
            <th>@Localizer["MajorId"]</th>
            <th>@Localizer["TeacherId"]</th>
            <th>@Localizer["Room"]</th>
            <th>@Localizer["Actions"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CourseID</td>
                <td>@item.CourseName</td>
                <td>@item.Credits</td>
                <td>@item.MajorID</td>
                <td>@item.TeacherID</td>
                <td>@item.Room</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.CourseID" class="btn btn-info btn-sm">@Localizer["Details"]</a>
                    <a asp-action="Edit" asp-route-id="@item.CourseID" class="btn btn-warning btn-sm">@Localizer["Edit"]</a>
                    <a asp-action="Delete" asp-route-id="@item.CourseID" class="btn btn-danger btn-sm">@Localizer["Delete"]</a>
                </td>
            </tr>
        }
    </tbody>
</table>
