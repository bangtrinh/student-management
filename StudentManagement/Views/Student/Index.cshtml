@model IEnumerable<StudentManagement.Models.Student>
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<StudentManagement.Views.Student.Index> Localizer

@{
    ViewData["Title"] = Localizer["StudentList"];
}

<h2>@Localizer["StudentList"]</h2>

<!-- Kiểm tra ngôn ngữ hiện tại -->
<p><strong>Culture hiện tại:</strong> @System.Globalization.CultureInfo.CurrentUICulture.Name</p>

<!-- Form tìm kiếm -->
<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" class="form-control" placeholder="@Localizer["Search"]..." value="@Context.Request.Query["searchString"]" />
        <button type="submit" class="btn btn-primary">@Localizer["Search"]</button>
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-primary">@Localizer["AddStudent"]</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Localizer["StudentId"]</th>
            <th>@Localizer["FullName"]</th>
            <th>@Localizer["BirthDate"]</th>
            <th>@Localizer["Gender"]</th>
            <th>@Localizer["Email"]</th>
            <th>@Localizer["Phone"]</th>
            <th>@Localizer["Address"]</th>
            <th>@Localizer["Class"]</th>
            <th>@Localizer["Status"]</th>
            <th>@Localizer["Actions"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StudentID</td>
                <td>@item.FullName</td>
                <td>@item.DateOfBirth.ToString("dd/MM/yyyy")</td>
                <td>@item.Gender</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Address</td>
                <td>@item.Class.ClassName</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.StudentID" class="btn btn-info btn-sm">@Localizer["Details"]</a>
                    <a asp-action="Edit" asp-route-id="@item.StudentID" class="btn btn-warning btn-sm">@Localizer["Edit"]</a>
                    <a asp-action="Delete" asp-route-id="@item.StudentID" class="btn btn-danger btn-sm">@Localizer["Delete"]</a>
                </td>
            </tr>
        }
    </tbody>
</table>
