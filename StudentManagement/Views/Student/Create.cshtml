@model StudentManagement.Models.Student
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<StudentManagement.SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["CreateStudentTitle"];
}

<div class="content py-4">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-white border-bottom-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="card-title mb-0 text-primary">
                                <i class="fas fa-user-plus me-2"></i>
                            </h3>
                        </div>
                    </div>

                    <div class="card-body">
                        <form asp-action="Create" class="needs-validation" novalidate>
                            <div class="row">
                                <!-- Left Column -->
                                <div class="col-md-6">
                                    <!-- Student ID -->
                                    <div class="form-group mb-4">
                                        <label asp-for="StudentID" class="form-label fw-bold">@Localizer["ID"]</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                                            <input asp-for="StudentID" class="form-control" placeholder="@Localizer["EnterStudentId"]" />
                                        </div>
                                        <span asp-validation-for="StudentID" class="text-danger small"></span>
                                    </div>

                                    <!-- Full Name -->
                                    <div class="form-group mb-4">
                                        <label asp-for="FullName" class="form-label fw-bold">@Localizer["FullName"]</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                            <input asp-for="FullName" class="form-control" placeholder="@Localizer["EnterFullName"]" />
                                        </div>
                                        <span asp-validation-for="FullName" class="text-danger small"></span>
                                    </div>

                                    <!-- Date of Birth -->
                                    <div class="form-group mb-4">
                                        <label asp-for="DateOfBirth" class="form-label fw-bold">@Localizer["DateOfBirth"]</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                            <input asp-for="DateOfBirth" class="form-control" type="date" />
                                        </div>
                                        <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                                    </div>

                                    <!-- Gender -->
                                    <div class="form-group mb-4">
                                        <label asp-for="Gender" class="form-label fw-bold">@Localizer["Gender"]</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-venus-mars"></i></span>
                                            <select asp-for="Gender" class="form-select">
                                                <option value="">@Localizer["SelectGender"]</option>
                                                <option value="Nam">@Localizer["Male"]</option>
                                                <option value="Nữ">@Localizer["Female"]</option>
                                                <option value="Khác">@Localizer["Other"]</option>
                                            </select>
                                        </div>
                                        <span asp-validation-for="Gender" class="text-danger small"></span>
                                    </div>
                                </div>

                                <!-- Right Column -->
                                <div class="col-md-6">
                                    <!-- Email -->
                                    <div class="form-group mb-4">
                                        <label asp-for="Email" class="form-label fw-bold">@Localizer["Email"]</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                            <input asp-for="Email" class="form-control" placeholder="@Localizer["EnterEmail"]" />
                                        </div>
                                        <span asp-validation-for="Email" class="text-danger small"></span>
                                    </div>

                                    <!-- Phone Number -->
                                    <div class="form-group mb-4">
                                        <label asp-for="PhoneNumber" class="form-label fw-bold">@Localizer["PhoneNumber"]</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                            <input asp-for="PhoneNumber" class="form-control" placeholder="@Localizer["EnterPhoneNumber"]" />
                                        </div>
                                        <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                                    </div>

                                    <!-- Address -->
                                    <div class="form-group mb-4">
                                        <label asp-for="Address" class="form-label fw-bold">@Localizer["Address"]</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                            <input asp-for="Address" class="form-control" placeholder="@Localizer["EnterAddress"]" />
                                        </div>
                                        <span asp-validation-for="Address" class="text-danger small"></span>
                                    </div>

                                    <!-- Class -->
                                    <div class="form-group mb-4">
                                        <label asp-for="ClassID" class="form-label fw-bold">@Localizer["Class"]</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-users"></i></span>
                                            <select asp-for="ClassID" class="form-select" asp-items="ViewBag.Classes">
                                                <option value="">@Localizer["SelectClass"]</option>
                                            </select>
                                        </div>
                                        <span asp-validation-for="ClassID" class="text-danger small"></span>
                                    </div>

                                    <!-- Status -->
                                    <div class="form-group mb-4">
                                        <label asp-for="Status" class="form-label fw-bold">@Localizer["Status"]</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-info-circle"></i></span>
                                            <select asp-for="Status" class="form-select">
                                                <option value="Active">@Localizer["Active"]</option>
                                                <option value="Inactive">@Localizer["Inactive"]</option>
                                                <option value="On leave">@Localizer["OnLeave"]</option>
                                            </select>
                                        </div>
                                        <span asp-validation-for="Status" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mt-4 pt-3 border-top">
                                <div class="d-flex justify-content-end">
                                    <button type="submit" class="btn btn-primary px-4 me-2">
                                        <i class="fas fa-save me-2"></i>@Localizer["Add"]
                                    </button>
                                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                        <i class="fas fa-times me-2"></i>@Localizer["Back"]
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        <link rel="stylesheet" href="~/css/form-style.css" asp-append-version="true" / >
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}