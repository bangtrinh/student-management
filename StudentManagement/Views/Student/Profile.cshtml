@model StudentManagement.Models.Student
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<StudentManagement.SharedResources> Localizer


@{
    ViewData["Title"] = Localizer["StudentInformation"];
}

<div class="container mt-4">
    <h2 class="mb-4 fw-bold text-dark">
        <i class="bi bi-person-fill text-primary me-2"></i> @Localizer["StudentInformation"]
    </h2>

    @if (Model != null)
    {
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0 fw-semibold">
                    <i class="bi bi-info-circle me-2"></i> @Localizer["StudentDetails"]
                </h5>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped mb-0">
                    <tbody>
                        <tr>
                            <th scope="row" class="bg-light text-dark fw-bold" style="width: 30%;">@Localizer["ID"]</th>
                            <td>@Model.StudentID</td>
                        </tr>
                        <tr>
                            <th scope="row" class="bg-light text-dark fw-bold">@Localizer["FullName"]</th>
                            <td>@Model.FullName</td>
                        </tr>
                        <tr>
                            <th scope="row" class="bg-light text-dark fw-bold">@Localizer["DateOfBirth"]</th>
                            <td>@Model.DateOfBirth.ToShortDateString()</td>
                        </tr>
                        <tr>
                            <th scope="row" class="bg-light text-dark fw-bold">@Localizer["Gender"]</th>
                            <td>@Localizer[Model.Gender]</td>
                        </tr>
                        <tr>
                            <th scope="row" class="bg-light text-dark fw-bold">@Localizer["Email"]</th>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <th scope="row" class="bg-light text-dark fw-bold">@Localizer["PhoneNumber"]</th>
                            <td>@Model.PhoneNumber</td>
                        </tr>
                        <tr>
                            <th scope="row" class="bg-light text-dark fw-bold">@Localizer["Address"]</th>
                            <td>@Model.Address</td>
                        </tr>
                        <tr>
                            <th scope="row" class="bg-light text-dark fw-bold">@Localizer["Class"]</th>
                            <td>@Model.ClassID</td>
                        </tr>
                        <tr>
                            <th scope="row" class="bg-light text-dark fw-bold">@Localizer["Status"]</th>
                            <td>
                                <span class="badge @(Model.Status == "Đang học" ? "bg-success" : "bg-warning")">
                                    @Localizer[Model.Status]
                                </span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewBag.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="@Localizer["Back"]"></button>
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
}