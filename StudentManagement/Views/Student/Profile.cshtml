@model StudentManagement.Models.Student

@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="container mt-4">
    <h2 class="mb-4 fw-bold text-dark">
        <i class="bi bi-person-fill text-primary me-2"></i> Thông tin cá nhân
    </h2>

    @if (Model != null)
    {
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0 fw-semibold">
                    <i class="bi bi-info-circle me-2"></i> Chi tiết sinh viên
                </h5>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped mb-0">
                    <tbody>
                        <tr>
                            <th scope="row" class="bg-light text-dark fw-bold" style="width: 30%;">Mã sinh viên</th>
                            <td>@Model.StudentID</td>
                        </tr>
                        <tr>
                            <th scope="row" class="bg-light text-dark fw-bold">Họ và tên</th>
                            <td>@Model.FullName</td>
                        </tr>
                        <tr>
                            <th scope="row" class="bg-light text-dark fw-bold">Ngày sinh</th>
                            <td>@Model.DateOfBirth.ToShortDateString()</td>
                        </tr>
                        <tr>
                            <th scope="row" class="bg-light text-dark fw-bold">Giới tính</th>
                            <td>@Model.Gender</td>
                        </tr>
                        <tr>
                            <th scope="row" class="bg-light text-dark fw-bold">Email</th>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <th scope="row" class="bg-light text-dark fw-bold">Số điện thoại</th>
                            <td>@Model.PhoneNumber</td>
                        </tr>
                        <tr>
                            <th scope="row" class="bg-light text-dark fw-bold">Địa chỉ</th>
                            <td>@Model.Address</td>
                        </tr>
                        <tr>
                            <th scope="row" class="bg-light text-dark fw-bold">Lớp</th>
                            <td>@Model.ClassID</td>
                        </tr>
                        <tr>
                            <th scope="row" class="bg-light text-dark fw-bold">Trạng thái</th>
                            <td>
                                <span class="badge @(Model.Status == "Đang học" ? "bg-success" : "bg-warning")">
                                    @Model.Status
                                </span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewBag.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
}