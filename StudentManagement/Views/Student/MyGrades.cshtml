@model IEnumerable<StudentManagement.Models.Student>
@using Microsoft.Extensions.Localization
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["StudentList"];
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h2 class="fw-bold text-dark mb-0">
                <i class="bi bi-person-lines-fill text-primary me-2"></i> @Localizer["StudentList"]
            </h2>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-person-plus-fill me-2"></i> @Localizer["AddNew"]
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-4">
            <form method="get" class="mb-4">
                <div class="input-group">
                    <input type="text" name="searchString" class="form-control"
                           placeholder="@Localizer["Search"]..."
                           value="@Context.Request.Query["searchString"]" />
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle text-center">
                    <thead class="bg-light">
                        <tr>
                            <th>@Localizer["StudentId"]</th>
                            <th>@Localizer["FullName"]</th>
                            <th>@Localizer["BirthDate"]</th>
                            <th>@Localizer["Gender"]</th>
                            <th>@Localizer["Class"]</th>
                            <th>@Localizer["Status"]</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.StudentID</td>
                                <td>@item.FullName</td>
                                <td>@item.DateOfBirth.ToString("dd/MM/yyyy")</td>
                                <td>@item.Gender</td>
                                <td>@item.Class.ClassName</td>
                                <td>
                                    <span class="badge @(item.Status == "Đang học" || item.Status == "Active" ? "bg-success" : "bg-warning") text-white">
                                        @item.Status
                                    </span>
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-outline-secondary btn-sm dropdown-toggle"
                                                type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <ul class="dropdown-menu shadow-sm">
                                            <li>
                                                <a class="dropdown-item" asp-action="Details" asp-route-id="@item.StudentID">
                                                    <i class="bi bi-eye me-2"></i> @Localizer["Details"]
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.StudentID">
                                                    <i class="bi bi-pencil me-2"></i> @Localizer["Edit"]
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-action="Delete" asp-route-id="@item.StudentID">
                                                    <i class="bi bi-trash me-2"></i> @Localizer["Delete"]
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: none;
            border-radius: 8px;
        }

        .table th {
            font-weight: 600;
            color: #495057;
        }

        .badge {
            padding: 6px 12px;
            border-radius: 12px;
            font-size: 0.9rem;
        }

        .dropdown-menu {
            border-radius: 8px;
            padding: 0.5rem 0;
        }

        .dropdown-item {
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
        }

            .dropdown-item:hover {
                background-color: #f8f9fa;
            }
    </style>
}