@model StudentManagement.Models.Student
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<StudentManagement.SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["StudentDetailsTitle"];
}

<div class="content py-4">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-white border-bottom-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="card-title mb-0 text-primary">
                                <i class="fas fa-user-graduate me-2"></i>@Localizer["StudentDetailsTitle"]
                            </h3>
                        </div>
                    </div>

                    <div class="card-body">
                        <!-- Student Profile Header -->
                        <div class="d-flex align-items-center mb-4">
                            <div>
                                <h3 class="mb-1">@Model.FullName</h3>
                                <span class="badge bg-primary">@Model.StudentID</span>
                                <span class="badge @(Model.Status == "Đang học" ? "bg-success" : "bg-warning") ms-2">@Model.Status</span>
                            </div>
                        </div>

                        <!-- Student Details -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label class="form-label text-muted small mb-1">@Localizer["DateOfBirth"]</label>
                                    <p class="fs-5">@Model.DateOfBirth.ToString("dd/MM/yyyy")</p>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label text-muted small mb-1">@Localizer["Gender"]</label>
                                    <p class="fs-5">
                                        @if (Model.Gender == "Nam")
                                        {
                                            <i class="fas fa-mars text-primary me-2"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-venus text-pink me-2"></i>
                                        }
                                        @Model.Gender
                                    </p>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label text-muted small mb-1">@Localizer["Email"]</label>
                                    <p class="fs-5">
                                        <i class="fas fa-envelope me-2 text-muted"></i>
                                        @Model.Email
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label class="form-label text-muted small mb-1">@Localizer["PhoneNumber"]</label>
                                    <p class="fs-5">
                                        <i class="fas fa-phone me-2 text-muted"></i>
                                        @Model.PhoneNumber
                                    </p>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label text-muted small mb-1">@Localizer["Address"]</label>
                                    <p class="fs-5">
                                        <i class="fas fa-map-marker-alt me-2 text-muted"></i>
                                        @Model.Address
                                    </p>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label text-muted small mb-1">@Localizer["Class"]</label>
                                    <p class="fs-5">
                                        <i class="fas fa-users me-2 text-muted"></i>
                                        @Model.Class.ClassName
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-end gap-3 mt-4 pt-3 border-top">
                            <a asp-action="Edit" asp-route-id="@Model.StudentID" class="btn btn-warning px-4">
                                <i class="fas fa-edit me-2"></i>@Localizer["Edit"]
                            </a>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="fas fa-arrow-left me-2"></i>@Localizer["Back"]
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        <link rel="stylesheet" href="~/css/form-style.css" asp-append-version="true" / >
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}